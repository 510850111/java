    private void jButtonSetBgColorActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        callSetColor("设置背景颜色");
//        this.dispose();
    }                                                 

    private void jButtonSetFoodColorActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        callSetColor("设置食物颜色");
    }                                                   

    private void jButtonSetSnakeBodyColorActionPerformed(java.awt.event.ActionEvent evt) {                                                         
        callSetColor("设置贪吃蛇身体颜色");
    }                                                        

    private void jButtonSetSnakeHeadColorActionPerformed(java.awt.event.ActionEvent evt) {                                                         
        callSetColor("设置贪吃蛇头部颜色");
    }                                                        

    private void jSliderControlSpeedStateChanged(javax.swing.event.ChangeEvent evt) {                                                 
        jSpinner.setValue(jSliderControlSpeed.getValue());
    }                                                

    private void jSliderControlSpeedMousePressed(java.awt.event.MouseEvent evt) {                                                 
       jSpinner.setValue(jSliderControlSpeed.getValue());
    }                                                

    private void callSetColor(String title){
    	Color foodColor = JColorChooser.showDialog(
				ControlPanel.this, title, Color.DARK_GRAY);
    }
    
    
