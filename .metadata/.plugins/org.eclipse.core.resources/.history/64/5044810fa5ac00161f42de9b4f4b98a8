		snake.addSnakleListener(controller);
		
		frame.addKeyListener(controller);
		
		UI.setJFrameLocateCenter(frame);

		frame.setResizable(false);
		frame.setVisible(true);
		controller.newGame();	
	}
	
	public void show(Frame frame) {
		frame.setVisible(true);
	}
	
