
public class TEXT3 {
	private static int step = 2;
	private static int a = 0;
	public static void main(String[] args) {
		solve();
		disp();
	}

	private static void solve() {
		int count = 0;
		for(int i = 0;i <= 50; i++){
			a += step;
			count++;
			disp();
			if(count%2 == 0){
				step += step;
			}
		}
		
	}

	private static void disp() {
		System.out.printf("%3d",a);
		
	}
}
